<%= form_tag sessions_path do %>
  <fieldset>
    <legend>Sign in</legend>
      <div>
        <%= label_tag :username %><br />
        <%= text_field_tag :username, params[:username] %>
      </div>
      <div>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </div>
      <div><%= submit_tag "Sign in" %></div>
  </fieldset>
<% end %>

