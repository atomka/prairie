<%= form_tag sessions_path do %>
  <fieldset>
    <legend>Sign in</legend>
      <div>
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </div>
      <div><%= submit_tag "Sign in" %></div>
      <%= link_to "Need an account?", register_path %>
  </fieldset>
<% end %>

